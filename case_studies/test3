--Interface

val;

--InitialState

(c0 && c1 && c2 && out) || (!c0 && !c1 && !c2 && !out);



--Specification

OG((c0 && c1 && c2) || (!c0 && !c1 && !c2));

AG(
	(c0 || !c0) &&
	(c1 || !c1) &&
	(c2 || !c2)
);

AG(val <-> ((c0 && c1 ) || (c0 && c2) || (c1 && c2) || (c0 && c1 && c2)));

AG(EX(c0 && c1 && c2 && val && out));

AG(EX(!c0 && !c1 && !c2 && !val && !out));

