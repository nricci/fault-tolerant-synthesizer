--Interface

o;

--Specification

AG(r -> (((b1 && b2) || (b2 && b3) || (b1 && b3)) -> o));

AG(r -> (((!b1 && !b2) || (!b2 && !b3) || (!b1 && !b3)) -> !o));

AG(w -> ((o && b1 && b2 && b3) || (!o && !b1 && !b2 && !b3)));

OG((o && b1 && b2 && b3) || (!o && !b1 && !b2 && !b3));

PG((o && b1 && b2 && b3) || (!o && !b1 && !b2 && !b3));

AG(EX(w && o) && EX(w && !o));

AG(EX(w && o && EX(true)));

AG(EX(w && !o && EX(true)));







